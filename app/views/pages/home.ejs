<article class="b-beers">
  <div class="wrapper region">
    <% if (typeof data !== "undefined" && data) { %>
      <h2>beers</h2>
      <ol role="list">
        <% data.forEach((result) => { %>
          <li>
            <a class="sidebar" href="beers/<%= result.slug %>">
              <div>
                <img src="" alt="image of the <%= result.name %> beer">
              </div>
              <div class="[ flow ][ u-padding ]" data-padding='large'>
                <h3><%= result.name %></h3>
                <p>sexy words</p>
                <ul role="list">
                  <li><%= result.style %></li>
                  <li><span>X</span><%= result.abv %><span>ABV</span></li>
                  <li><span>X</span><%= result.ibu %><span>IBU</span></li>
                  <li><span>X</span><%= result.ebv %><span>EBV</span></li>
                </ul>
              </div>
            </a>
          </li>
        <% }); %>
      </ol>
      <div><a href="beers">view all beers</a></div>
    <% } else { %>
      <h2>no data to display</h2>
    <% } %>
  </div>
</article>

