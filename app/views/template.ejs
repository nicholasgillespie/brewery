<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/app.css">
  <script type="module" defer src="/js/app.js"></script>

<% if (typeof reqOriginalUrl !== 'undefined' && reqOriginalUrl.startsWith("/beers") && data && data.name) { %>
  <title><%= data.name.charAt(0).toUpperCase() + data.name.slice(1) %> | app skeleton</title>
<% } else if (page && page === 'error') { %>
  <% if (typeof statusCode !== 'undefined') { %>
    <title><%= statusCode %> | app skeleton</title>
  <% } else { %>
    <title>Error | app skeleton</title>
  <% } %>
<% } else if (page && page !== 'home') { %>
  <title><%= page.charAt(0).toUpperCase() + page.slice(1) %> | app skeleton</title>
<% } else { %>
  <title>app skeleton</title>
<% } %>

</head>

<%- include('partials/_header'); -%>

  <%- include(`pages/${page}`) %>

<%- include('partials/_footer'); -%>